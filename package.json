{
  "name": "@juitnow/cmd-check-updates",
  "version": "1.0.1",
  "description": "Small and fast utility to update package dependencies",
  "author": "Team Juit <developers@juit.com>",
  "license": "UNLICENSED",
  "main": "index.js",
  "bin": {
    "check-updates": "index.js"
  },
  "scripts": {
    "build": "npm run lint -- --cache && npm run coverage",
    "bump": "bash -c 'npm --no-git-tag-version version ${1:-patch}' --",
    "coverage": "nyc --reporter=html --reporter=text npm run test",
    "dev": "npx nodemon -i dist -e js,json,ts -x npm run build",
    "lint": "eslint --ext .js --ext .ts .",
    "lintfix": "npm run lint -- --fix",
    "test": "mocha 'test/**/*.test.{ts,js}' || false",
    "update-node-base": "npx @juitnow/cmd-node-base --release --replace && npm run updates",
    "updates": "rm -rf node_modules package-lock.json && npx @juitnow/cmd-check-updates && npm install"
  },
  "dependencies": {
    "package-json": "^6.5.0",
    "semver": "^7.3.2",
    "yargs": "^16.0.3"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.10.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.22.1",
    "mocha": "^8.1.3",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.19"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/juitnow/cmd-check-updates.git"
  },
  "bugs": {
    "url": "https://github.com/juitnow/cmd-check-updates/issues"
  },
  "homepage": "https://github.com/juitnow/cmd-check-updates#readme"
}
