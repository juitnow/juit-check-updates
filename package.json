{
  "name": "@juitnow/cmd-check-updates",
  "version": "1.1.1",
  "description": "Small and fast utility to update package dependencies",
  "author": "Team Juit <developers@juit.com>",
  "license": "UNLICENSED",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "check-updates": "./check-updates.js"
  },
  "scripts": {
    "build": "npm run lint -- --cache && npm run compile && npm run coverage",
    "bump": "bash -c 'npm --no-git-tag-version version ${1:-patch}' --",
    "compile": "tsc || false",
    "coverage": "nyc --reporter=html --reporter=text npm run test",
    "dev": "npx nodemon -i dist -e js,json,ts -x npm run build",
    "lint": "eslint --ext .js --ext .ts .",
    "lintfix": "npm run lint -- --fix",
    "test": "ts-mocha 'test/**/*.test.{ts,js}' || false",
    "update-node-base": "npx @juitnow/cmd-node-base --release --typescript --replace && npm run updates",
    "updates": "npm install && node ./check-updates.js && rm -rf node_modules package-lock.json && npm install"
  },
  "dependencies": {
    "glob": "^7.1.6",
    "package-json": "^6.5.0",
    "semver": "^7.3.5",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.13.14",
    "@types/chai": "^4.2.16",
    "@types/chai-as-promised": "^7.1.3",
    "@types/glob": "^7.1.3",
    "@types/mocha": "<8.0.0",
    "@types/node": "<13.0.0",
    "@types/semver": "^7.3.4",
    "@types/yargs": "^16.0.1",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.23.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-tsdoc": "^0.2.11",
    "mocha": "^8.3.2",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.19",
    "ts-mocha": "^8.0.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/juitnow/cmd-check-updates.git"
  },
  "bugs": {
    "url": "https://github.com/juitnow/cmd-check-updates/issues"
  },
  "homepage": "https://github.com/juitnow/cmd-check-updates#readme"
}
