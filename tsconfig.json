{
  "compilerOptions": {
    "lib": [
      "es2019"
    ],
    "removeComments": false,
    "types": [
      "node",
      "mocha"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "esModuleInterop": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "target": "es2019",
    "declaration": true,
    "allowJs": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
  ]
}
